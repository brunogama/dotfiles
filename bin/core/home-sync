#!/usr/bin/env python3
"""Home Sync - Python wrapper entry point.

This script invokes the Python home_sync package.
Requires Python 3.11+ and the home_sync package to be installed.
"""

import sys
import os
from pathlib import Path

# Add the package directory to Python path for development
SCRIPT_DIR = Path(__file__).parent.resolve()
PACKAGE_DIR = SCRIPT_DIR / "home_sync"

if PACKAGE_DIR.exists():
    sys.path.insert(0, str(SCRIPT_DIR))

try:
    from home_sync.cli import main
except ImportError as e:
    print(f"Error: home_sync package not found: {e}", file=sys.stderr)
    print("\nInstallation required:", file=sys.stderr)
    print("  Development: cd bin/core/home_sync && pip install -e '.[dev]'", file=sys.stderr)
    print("  User: uv tool install --from ./bin/core/home_sync home-sync", file=sys.stderr)
    sys.exit(1)

if __name__ == "__main__":
    sys.exit(main())
