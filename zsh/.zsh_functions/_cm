#compdef cm

_arguments -C \
  '1: :->types' \
  '*: :->args'

case $state in
  types)
    local -a types
    types=(
      'feat:New feature'
      'fix:Bug fix'
      'docs:Documentation changes'
      'style:Code style changes'
      'refactor:Code refactoring'
      'test:Testing'
      'chore:Maintenance tasks'
    )
    _describe -t types 'commit type' types
    ;;
esac