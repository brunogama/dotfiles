#!/usr/bin/env bash

# Shell Reload Helper
# Reloads the current shell configuration

echo "ðŸ”„ Reloading shell configuration..."

# Check which shell we're in and reload appropriately
if [[ -n "$ZSH_VERSION" ]]; then
    echo "   Detected: Zsh"
    exec zsh
elif [[ -n "$BASH_VERSION" ]]; then
    echo "   Detected: Bash"
    exec bash
else
    echo "   Detected: Unknown shell, trying to restart current shell"
    exec "$SHELL"
fi
